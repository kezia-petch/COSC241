    public int countHeads(){
        int heads = 0;
        int tails = 0;
        int count = 0;
        while (count < coins.length){
        if (coins[count] == HEADS){
            heads++;
            coinSeries += "H ";
        }
        else {
            tails++;
            coinSeries += "T ";
        }
        count++;
    }
        return heads;
    }

    public String toString(){
        return coinSeries;
    }

}
